page {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

swiper {
  display: block;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

swiper-item {
  position: absolute;
  width: 100%;
  height: 100%;
  transform: translateZ(0px);
}

text {
  display: block;
  padding: 12px 16px;
  font-size: .9rem;

}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(0px);
}

.shadow {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
}

.info {
  position: absolute;
  top: 0;
  width: 100%;
  margin-right: 48px;
  color: #FFFFFF;
}

.tips {
  font-size: 0.8rem
}

.title {
  text-align: center;
  font-size: 1.3rem;
  margin-bottom: 20px;
  margin-top:10px;
}

.scope-wrap {
  margin: 0;
  padding: 0;
  text-align: center;
}

.scope {
  margin: 0;
  padding: 0;
  width: 50%;
  float: left;
  margin-bottom: 20px;
}
.scope:nth-of-type(2n) {
  float: right
}

.scope image {
  width: 80px;
  height: 80px;
}

.contacts {
  margin-left: 16px;
}

.icon {
  width: 24px;
  height: 24px;
  margin: 10px 8px 0 0;
  float: left
}
